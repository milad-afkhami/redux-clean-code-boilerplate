{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@redux": ["./redux/index"],
      "@redux/*": ["./redux/*"],
      "@kits": ["./components/kit/index"],
      "@kits/*": ["./components/kit/*"],
      "@components/*": ["./components/*"],
      "@utils": ["./utils/index"],
      "@models": ["./models/index"],
      "@models/*": ["./models/*"],
      "@services": ["./services/index"],
      "@constants": ["./constants/index"],
      "@constants/*": ["./constants/*"],
      "@stylesheets": ["./stylesheets/index"],
      "@stylesheets/*": ["./stylesheets/*"],
      "@helpers": ["./helpers/index"],
      "@helpers/*": ["./helpers/*"],
      "@localReducers": ["./localReducers/index"],
      "@hooks": ["./hooks/index"],
      "@i18n": ["./i18n/index"],
      "@config": ["./config"],
      "@images": ["./public/images/index"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
